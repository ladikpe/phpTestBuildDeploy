{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "public/assets/js",
    "noImplicitAny": true
  },
  "include": ["resources/assets/js/**/*"]
}
